rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection rules
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isOwner(userId);
      
      // Users can create their own profile (only once during registration)
      allow create: if isOwner(userId) 
                    && request.resource.data.uid == userId
                    && request.resource.data.email == request.auth.token.email;
      
      // Users can update their own profile (but not uid or email)
      allow update: if isOwner(userId)
                    && request.resource.data.uid == userId
                    && request.resource.data.email == resource.data.email;
      
      // Users cannot delete their profile (optional - remove if you want to allow deletion)
      allow delete: if false;
    }
    
    // Reports collection rules
    match /reports/{reportId} {
      // Users can read their own reports
      allow read: if isAuthenticated() 
                  && resource.data.userId == request.auth.uid;
      
      // Users can create reports (must set userId to their own uid)
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.id == reportId
                    && request.resource.data.status in ['pending', 'completed', 'failed'];
      
      // Users can update their own reports
      allow update: if isAuthenticated()
                    && resource.data.userId == request.auth.uid
                    && request.resource.data.userId == request.auth.uid;
      
      // Users can delete their own reports
      allow delete: if isAuthenticated()
                    && resource.data.userId == request.auth.uid;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
